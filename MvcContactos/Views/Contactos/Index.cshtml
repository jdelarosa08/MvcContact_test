@model IEnumerable<MvcContactos.Models.Contactos>

@{
    ViewData["Title"] = "Lista de Contactos";
}

<h2>Mi Lista de Contactos</h2>

<p>
    <a asp-action="Create" class="btn btn-success" id="add"><span class="glyphicon glyphicon-plus"></span> Nuevo Contacto</a>
</p>
<br>
<br>
<div class="row">
    <div class="col-md-10">
        <table class="table">
            <thead class="dark">
                <tr>
                    <th scope="col">
                        #
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td scope="row">
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-list-alt"></span> Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span> Borrar</a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>